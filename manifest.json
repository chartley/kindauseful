{
  "manifest_version": 2,

  "name": "Kinda Useful",
  "description": "Instead of procrastinating on your favourite site, we'll suggest something kinda useful to do.",
  "version": "0.1",

  "permissions": [
    "alarms",
    "tabs",
    "webNavigation",
    "*://*.googleapis.com/",
    "*://*.google.com/",
    "*://*.asana.com/"
  ],

  "background": {
    "scripts": ["js/jquery-1.11.0.min.js", "background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "js": ["js/jquery-1.11.0.min.js", "js/underscore.js", "js/backbone.js", "js/asanatasks.js", "contentscript.js"],
      "css": ["contentscript.css"],
      "run_at": "document_start"
    }
  ]
}
