{
  "manifest_version": 2,

  "name": "Kinda Useful",
  "description": "Instead of procrastinating on your favourite site, we'll suggest something kinda useful to do.",
  "version": "0.1",

  "permissions": [
    "alarms",
    "tabs",
    "webNavigation",
    "*://*.googleapis.com/",
    "*://*.google.com/"
  ],

  "background": {
    "scripts": ["jquery.min.js", "background.js"],
    "persistent": false     // event page as per https://developer.chrome.com/extensions/event_pages
  },

  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "js": ["jquery.min.js", "contentscript.js"],
      "css": ["contentscript.css"],
      "run_at": "document_start"
    }
  ]
}
